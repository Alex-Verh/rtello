%aside.sidebar.w-64.sticky.top-0.left-0.bottom-0.overflow-y-auto
    %div.sidebar__header.flex.items-center.justify-between
        %div.workspace.sidebar__title.flex.items-center.cursor-pointer
            %div.workspace__icon.sidebar__title__icon.cursor-pointer.flex.items-center.justify-center D
            %span Dashboard Name

        %button.sidebar__toggle
            = image_tag("arrow.svg", alt: "▸", class: "cursor-pointer")

    %div.sidebar__label Members
    - 6.times do |i|
        %div.sidebar__member.flex.items-center.justify-between
            %div.sidebar__member__account.flex.items-center.cursor-pointer
                = image_tag("account.svg", alt: "Account:", class: "sidebar__member__icon")
                %span Alexandru Verhovetchi

            %button
                = image_tag("cross.svg", alt: "×", class: "cursor-pointer sidebar__member__remove")


    %div.sidebar__label Manage Dashboard
    %div.sidebar__btn.flex.items-center.cursor-pointer
        = image_tag("label.svg", alt: "Modify", class: "sidebar__btn__icon")
        %button Change Name
    
    %div.sidebar__btn.flex.items-center.cursor-pointer
        = image_tag("plus.svg", alt: "Add", class: "sidebar__btn__icon")
        %button Add New Member
    
    %div.sidebar__btn.sidebar__btn_delete.flex.items-center.cursor-pointer
        = image_tag("trash.svg", alt: "Delete", class: "sidebar__btn__icon")
        %button Delete Dashboard


    %div.sidebar__label Other Dashboards
    - 6.times do |i|
        %div.workspace.sidebar__dashboard.flex.items-center.cursor-pointer
            %div.workspace__icon.cursor-pointer.flex.items-center.justify-center D
            %button Dashboard Name

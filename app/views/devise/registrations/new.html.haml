%div.register
  %div.register__title Rtello - Sign Up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :first_name, class: "field__label"
      = f.text_field :first_name, autofocus: true, class: "field__input"
    .field
      = f.label :last_name, class: "field__label"
      = f.text_field :last_name, autocomplete: "email", class: "field__input"
    .field
      = f.label :email, class: "field__label"
      = f.email_field :email, autocomplete: "email", class: "field__input"
    .field
      = f.label :password, class: "field__label"
      -# - if @minimum_password_length
      -#   %em
      -#     (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "new-password", class: "field__input"
    .field
      = f.label :password_confirmation, class: "field__label"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "field__input"
    .actions
      = f.submit "Sign up", class: "button cursor-pointer"
  = render "devise/shared/links"

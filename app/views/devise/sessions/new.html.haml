%div.register
  %div.register__title Rtello - Sign In
  = form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f|
    .field
      = f.label :email, class: "field__label"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input"
    .field
      = f.label :password, class: "field__label"
      = f.password_field :password, autocomplete: "current-password", class: "field__input"

    - if devise_mapping.rememberable?
      .field.flex.items-center
        = f.check_box :remember_me, class: "field__checkbox cursor-pointer"
        = f.label :remember_me, class: "field__label cursor-pointer"
    .actions
      = f.submit "Sign In", class: "button cursor-pointer"
  = render "devise/shared/links"
